@{
    ViewData["Title"] = "Inicio de Sesión";
    Layout = "~/Views/Shared/_Layout.cshtml";


}
@model FrontEnd.Models.LoginModeloUsuario


<!-- Login Start -->
<div class="container-fluid bg-secondary my-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 py-5 py-lg-0">
                <h6 class="text-primary text-uppercase font-weight-bold">Bienvenido de nuevo</h6>
                <h1 class="mb-4">Inicia Sesión en tu Cuenta</h1>
                <p class="mb-4">Accede para vizualizar sus paquetes y gestionar tus datos.</p>
            </div>
            <div class="col-lg-6">
                <div class="bg-primary py-5 px-4 px-sm-5">
                    <form class="py-5" asp-controller="Acceso" asp-action="InicioSesionUsuario" method="post">
                        @if (TempData["MensajeInicioFallido"] != null)
                        {
                            <div class="alert alert-primary" role="alert">
                                @TempData["MensajeInicioFallido"]
                            </div>
                        }
                        <div class="form-group">
                            <input asp-for="Correo" id="emailImput" type="email" class="form-control border-0 p-4" placeholder="Correo electrónico" name="Correo" required />
                        </div>
                        <div class="form-group">
                            <input asp-for="Contrasena" type="password" class="form-control border-0 p-4" placeholder="Contraseña" name="Contrasena" required />
                        </div>
                        <div>
                           <button id="btnIniciar" class="btn btn-dark btn-block border-0 py-3" type="submit" >Iniciar Sesión</button>
                        </div>
                        <div class="text-center mt-3">
                            <p class="text-white">¿No tienes una cuenta? <a class="text-dark font-weight-bold">Contacta al administrador</a></p>
                        </div>
                        <div class="form-group d-flex justify-content-center">
                            <a href="#" class="text-white">¿Olvidaste tu contraseña?</a>
                        </div>
                    </form>
                    <!--      <button id="btnIniciar">Iniciar Sesión </button>  >-->
                </div>
            </div>
        </div>
    </div>
</div>
