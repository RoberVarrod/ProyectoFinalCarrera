@{
    ViewData["Title"] = "Configuración de Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Página de Configuración de Usuario -->
<div class="container-fluid bg-light my-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-4 text-center">
                <!-- Imagen de Perfil -->
                <img src="/images/default-profile.jpg" class="rounded-circle" alt="Imagen de Perfil" style="width: 150px; height: 150px; object-fit: cover;">
                <h3 class="mt-3">Juan Pérez</h3>

                <!-- Información Personal -->
                <div class="mt-4">
                    <p><strong>Correo:</strong> juan.perez@example.com</p>
                    <p><strong>Teléfono:</strong> 12345678</p>
                    <p><strong>Dirección:</strong> Calle Ficticia 123, Provincia, Cantón, Distrito, 12345</p>
                    <p><strong>Cédula:</strong> 1234567890</p>
                </div>

                <!-- Cambiar Foto de Perfil (Discreto) -->
                <div class="mt-3">
                    <a href="#" data-toggle="modal" data-target="#changeProfilePicModal" class="text-decoration-none">
                        <span class="fas fa-camera"></span> Cambiar Foto de Perfil
                    </a>
                </div>

                <!-- Editar Información Personal -->
                <div class="mt-4">
                    <a href="#" data-toggle="collapse" data-target="#editInfoForm">
                        <span class="fas fa-edit"></span> Editar Información Personal
                    </a>
                    <div id="editInfoForm" class="collapse mt-3">
                        <form method="post" action="/Usuario/EditarInformacion" enctype="multipart/form-data">
                            <!-- Campos del formulario -->
                            <div class="form-group">
                                <input type="text" class="form-control" name="Nombre" value="Juan" required>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="PrimerApellido" value="Pérez" required>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="SegundoApellido" value="Lopez">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="Cedula" value="1234567890" pattern="\d{10}" required>
                            </div>
                            <div class="form-group">
                                <input type="email" class="form-control" name="Email" value="juan.perez@example.com" required>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="Telefono" value="12345678" pattern="\d{8}" required>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="Provincia" value="Provincia" required>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="Canton" value="Cantón" required>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="Distrito" value="Distrito" required>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="CodigoPostal" value="12345" required>
                            </div>
                            <div class="form-group">
                                <textarea class="form-control" name="Direccion" required>Calle Ficticia 123</textarea>
                            </div>
                            <button type="submit" class="btn btn-dark btn-block">Guardar Cambios</button>
                        </form>
                    </div>
                </div>

                <!-- Cambiar Contraseña -->
                <div class="mt-3">
                    <a href="#" data-toggle="collapse" data-target="#changePasswordForm">
                        <span class="fas fa-lock"></span> Cambiar Contraseña
                    </a>
                    <div id="changePasswordForm" class="collapse mt-3">
                        <form method="post" action="/Usuario/CambiarContraseña">
                            <div class="form-group">
                                <input type="password" class="form-control" name="PasswordActual" placeholder="Contraseña Actual" required>
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" name="NuevaContraseña" placeholder="Nueva Contraseña" required>
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" name="ConfirmarContraseña" placeholder="Confirmar Nueva Contraseña" required>
                            </div>
                            <button type="submit" class="btn btn-dark btn-block">Actualizar Contraseña</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal para cambiar la foto de perfil -->
<div class="modal fade" id="changeProfilePicModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Cambiar Foto de Perfil</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" action="/Usuario/CambiarFotoPerfil" enctype="multipart/form-data">
                    <div class="form-group">
                        <input type="file" class="form-control" name="ProfileImage" accept=".jpg,.png" required>
                    </div>
                    <button type="submit" class="btn btn-dark btn-block">Subir Nueva Foto</button>
                </form>
            </div>
        </div>
    </div>
</div>
