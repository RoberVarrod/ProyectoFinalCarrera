@{
    ViewData["Title"] = "Registro de Pago";
    Layout = "~/Views/Shared/_LayoutUsuarios.cshtml";
    var usuarioId = Context.Session.GetString("UsuarioId");
}
@model FrontEnd.Models.Notificacion

<!-- Notificacion Start -->
<div class="container-fluid bg-secondary my-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 py-5 py-lg-0">
                <h6 class="text-primary text-uppercase font-weight-bold">Registro de Notificación</h6>
                <h1 class="mb-4">Registra una notificación</h1>
                <p class="mb-4">Las notificaciónes se compartiran a los usuarios del sistema</p>
            </div>
            <div class="col-lg-6">
                <div class="bg-primary py-5 px-4 px-sm-5">

                    <form class="py-5" asp-controller="Notificacion" asp-action="RegistrarNotificacion" method="post" id="notificacionForm">
                        @if (TempData["MensajeNotificacionAgregada"] != null)
                        {
                            <div class="alert alert-success" role="alert">
                                @TempData["MensajeNotificacionAgregada"]
                            </div>
                        }

                        <div asp-validation-summary="All" class="text-danger"></div>

                        <h6 class="text-primary text-uppercase font-weight-bold" style="color:black !important">Datos de la notificación</h6>

                        <div class="form-group">
                            <input id="Titulo" type="text" class="form-control border-0 p-4" placeholder="Título de la notificación" name="Titulo" required="required" />
                        </div>
                        <div class="form-group">
                            <input id="Cuerpo" type="text" class="form-control border-0 p-4" placeholder="Mensaje de la notificación" name="Cuerpo" required="required" />
                        </div>
                        <div class="form-group">
                            <label>Tipo de notificación</label>
                            <select id="Tipo" name="Tipo" class="form-control" required="required">
                            <option value="Mantenimiento">Mantenimiento</option>
                            <option value="Aviso importante">Aviso importante</option>
                            <option value="Problema reportado">Problema importante</option>
                            <option value="Información general">Información general</option>
                        </select>
                        </div>
                        <div>
                            <button id="registrarNotificacion" class="btn btn-dark btn-block border-0 py-3" type="submit">Registrar notificación</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Notificacion End -->
