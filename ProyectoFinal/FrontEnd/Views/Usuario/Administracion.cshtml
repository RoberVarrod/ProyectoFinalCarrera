@{
    ViewData["Title"] = "Gestión de Empleados";
    Layout = "~/Views/Shared/_LayoutUsuarios.cshtml";
}

<!-- Lista de Empleados Start -->
<div class="container-fluid py-4">
    <h4 class="mb-4 text-primary">Lista de Empleados</h4>
    <table class="table table-hover table-striped shadow-sm">
        <thead class="thead-dark">
            <tr>
                <th>Cédula</th>
                <th>Nombre</th>
                <th>Correo</th>
                <th>Teléfono</th>
                <th>Oficina</th>
                <th>Rol</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <!-- Reemplazar con datos dinámicos -->
            <tr>
                <td>123456789</td>
                <td>Juan Pérez</td>
                <td>juan.perez@email.com</td>
                <td>123-4567</td>
                <td>Administracion</td>
                <td>Administrador</td>
                <td>
                    <button class="btn btn-link" data-toggle="modal" data-target="#detailsModalDelete"><i class="fas fa-ellipsis-h"></i></button>
                    <button class="btn btn-link" data-toggle="modal" data-target="#detailsModalUpdate"
                            data-cedula="123456789"
                            data-nombre="Juan Pérez"
                            data-primerapellido="Pérez"
                            data-segundoapellido="González"
                            data-correo="juan.perez@email.com"
                            data-telefono="123-4567"
                            data-oficina="Administración"
                            data-rol="Administrador">
                        <i class="fas fa-ellipsis-h"></i>
                    </button>
                </td>
            </tr>
        </tbody>
    </table>
</div>
<!-- Lista de Empleados End -->
<!-- Modal para eliminar empleado Start -->
<div class="modal fade" id="detailsModalDelete" tabindex="-1" role="dialog" aria-labelledby="detailsModalDeleteLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="detailsModalDeleteLabel">Detalles del Empleado</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p><strong>Cédula:</strong> 123456789</p>
                <p><strong>Nombre:</strong> Juan Pérez</p>
                <p><strong>Correo:</strong> juanperez@gmail.com</p>
                <p><strong>Teléfono:</strong> 123-4567</p>
                <p><strong>Oficina:</strong> Administración</p>
                <p><strong>Rol:</strong> Administrador</p>
                <hr />
                <h5 class="mt-3">¿Seguro que desea eliminar este empleado?</h5>
                <button id="borrarEmpleadoButton" type="button" data-dismiss="modal" class="btn btn-danger">Eliminar empleado</button>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>
<!-- Modal para eliminar empleado End -->
<!-- Modal para actualizar empleado Start -->
<div class="modal fade" id="detailsModalUpdate" tabindex="-1" role="dialog" aria-labelledby="detailsModalUpdateLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="detailsModalUpdateLabel">Actualizar Datos del Empleado</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p><strong>Actualiza los datos del empleado</strong></p>
                <!-- Formulario de actualización con asignación de roles -->
                <form method="post" action="/ActualizarEmpleado">
                    
                    <div class="input-group input-group-sm mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-sm">Nombre</span>
                        </div>
                        <input type="text" class="form-control" name="Nombre" value="Juan Pérez" required>
                    </div>

                    <div class="input-group input-group-sm mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-sm">Primer Apellido</span>
                        </div>
                        <input type="text" class="form-control" name="PrimerApellido" value="Pérez" required>
                    </div>

                    <div class="input-group input-group-sm mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-sm">Segundo Apellido</span>
                        </div>
                        <input type="text" class="form-control" name="SegundoApellido" value="González" required>
                    </div>

                    <div class="input-group input-group-sm mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-sm">Cédula</span>
                        </div>
                        <input type="text" class="form-control" name="Cedula" value="123456789" required>
                    </div>

                    <div class="input-group input-group-sm mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-sm">Correo Electrónico</span>
                        </div>
                        <input type="email" class="form-control" name="Correo" value="juanperez@gmail.com" required>
                    </div>

                    <div class="input-group input-group-sm mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-sm">Número de Teléfono</span>
                        </div>
                        <input type="number" class="form-control" name="Telefono" value="123-4567" required>
                    </div>

                    <div class="input-group input-group-sm mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-sm">Oficina</span>
                        </div>
                        <input type="text" class="form-control" name="Oficina" value="Administración" required>
                    </div>

                    <div class="form-group">
                        <label for="Role">Asignar Rol</label>
                        <select class="form-control" name="Rol">
                            <option value="admin" selected>Administrador</option>
                            <option value="transportista">Transportista</option>
                            <option value="bodega">Bodega</option>
                            <option value="atencion">Atención al cliente</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <button class="btn btn-dark" type="submit">Actualizar Datos</button>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Modal para actualizar empleado End -->
