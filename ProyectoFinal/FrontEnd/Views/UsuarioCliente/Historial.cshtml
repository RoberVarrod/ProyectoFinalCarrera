@model IEnumerable<FrontEnd.Models.HistorialCambiosPaquete>
@{
    ViewData["Title"] = "Historial de paquetes";
    Layout = "~/Views/Shared/_LayoutPaqueteHistorial.cshtml";
}




<div class="jumbotron jumbotron-fluid mb-5">
    <div class="container text-center py-5">
        <h1 class="text-primary mb-4">Consulta historial de cambios</h1>
        <h1 class="text-white display-3 mb-5">Cambios cronológicos del paquete</h1>
        <div class="mx-auto" style="width: 100%; max-width: 600px;">
        </div>
    </div>
</div>



<div class="timelinePaquetes">

    @foreach (var row in Model)
    {

        if (row.Sequencia % 2 != 0)
        {
            <div class="containertimelinepaquete leftcontenttimeline">
                <div class="contenttimeline">
                    <h2>@row.Informacion</h2>
                    <h4>@row.FechaRegistro</h4>
                    <p>@row.Descripcion</p>

                </div>

            </div>
        }
        else
        {
            <div class="containertimelinepaquete rightcontenttimeline">
                <div class="contenttimeline">
                    <h2>@row.Informacion</h2>
                    <h4>@row.FechaRegistro</h4>
                    <p>@row.Descripcion</p>
                </div>
            </div>
        }


    }

